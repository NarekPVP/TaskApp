<%- include('header') %>
<% if (users) { %>
<section style="background-color: #eee;">
    <div class="container py-5">
  
  
      <div class="row">
  
        <div class="col-md-6 col-lg-5 col-xl-4 mb-4 mb-md-0">
  
          <h5 class="font-weight-bold mb-3 text-center text-lg-start">Member</h5>
  
          <div class="card">
            <div class="card-body">
  
              <ul class="list-unstyled mb-0">
                <% users.forEach(function(u) { %>
                  <% if(user.id != u.id) { %>
                <li class="p-2 border-bottom" style="background-color: #eee;">
                  <a href="#!" class="d-flex justify-content-between">
                    <div class="d-flex flex-row">
                      <img src="https://icons.veryicon.com/png/o/miscellaneous/two-color-icon-library/user-286.png" alt="avatar"
                        class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="60">
                      <div class="pt-1">
                        <p class="fw-bold mb-0"><%= u.firstName %> <%= u.lastName %> (<%= u.username %>)</p>
                        <p class="small text-muted">click to message</p>
                      </div>
                    </div>
                    <div class="pt-1">
                      <p class="small text-muted mb-1">Just now</p>
                      <span class="badge bg-danger float-end">22</span>
                    </div>
                  </a>
                </li>
                <% } %>
                <% }); %>
              </ul>
  
            </div>
          </div>
  
        </div>
  
        <div class="col-md-6 col-lg-7 col-xl-8">
  
          <ul class="list-unstyled">
            <% messages.forEach(function(m) { %>
              <% if (m.firstUserId == user.id) { %>
                <li class="d-flex justify-content-between mb-4">
                  <img src="https://icons.veryicon.com/png/o/miscellaneous/two-color-icon-library/user-286.png" alt="avatar"
                    class="rounded-circle d-flex align-self-start me-3 shadow-1-strong" width="60">
                  <div class="card">
                    <div class="card-header d-flex justify-content-between p-3">
                      <p class="fw-bold mb-0"><%=user.firstName%> <%=user.lastName%> (<%=user.username%>)</p>
                    </div>
                    <div class="card-body">
                      <p class="mb-0">
                        <%= m.content %>
                      </p>
                    </div>
                  </div>
                </li>
              <% } else { %>
                <li class="d-flex justify-content-between mb-4">
                  <img src="https://icons.veryicon.com/png/o/miscellaneous/two-color-icon-library/user-286.png" alt="avatar"
                    class="rounded-circle d-flex align-self-start me-3 shadow-1-strong" width="60">
                  <div class="card">
                    <div class="card-header d-flex justify-content-between p-3">
                      <p class="fw-bold mb-0"><%=userToChat.firstName%> <%=userToChat.lastName%> (<%=userToChat.username%>)</p>
                    </div>
                    <div class="card-body">
                      <p class="mb-0">
                        <%= m.content %>
                      </p>
                    </div>
                  </div>
                </li>
              <% } %>  
            <% }); %>

            <div id="messages">

            </div>
            
            
            <form id="send-container">
            <li class="bg-white mb-3">
              <div class="form-outline">
                <textarea data-id="<%=user.id%>" data-usertochat="<%=userToChat.id%>" class="form-control" id="message-textarea" rows="4"></textarea>
                <label class="form-label" for="textAreaExample2">Message</label>
              </div>
            </li>
            <button type="submit" class="btn btn-info btn-rounded float-end">Send</button>
          </form>
          </ul>
  
        </div>
  
      </div>
  
    </div>
  </section>
  <% } %>
  <%- include('footer') %>