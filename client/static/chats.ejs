<%- include('header') %>
<style>
    #user-list li {
        cursor: pointer;
    }

    #user-list li.active {
        background-color: #007bff;
        color: #fff;
    }

    .list-group-item:hover {
        background-color: #007bff;
        color: #fff;
    }

    .list-group-item-link {
        text-decoration: none;
    }
</style>
<div class="container">
    <div class="row">
      <% if (users) { %>
        <div class="col">
            <h5>Users</h5>
            <ul class="list-group" id="user-list">
            <% users.forEach(function(u) { %>
              <% if(user.id != u.id) { %>
                <a href="/chat/<%=u.id%>/<%=user.id%>" class="list-group-item-link">
                    <li class="list-group-item"><%= u.firstName %> <%= u.lastName %> (<%= u.username %>)</li>
                </a>
                <% } %>
              <% }); %>
            </ul>
          </div>
      <% } %>
    </div>
  </div>
<%- include('footer') %>